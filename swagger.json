{
  "swagger": "2.0",
  "info": {
    "title": "Miami Dade County GTFS API",
    "version": "v1"
  },
  "paths": {
    "/api/trips": {
      "get": {
        "operationId": "listTrips",
        "summary": "List All Trips",
        "parameters": [
          {
            "in": "query",
            "name": "page",
            "type": "integer",
            "required": false,
            "description": "The page you are trying to query, each page gives back 100 trips"
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "An array with all the trips in Miami Dade County",
            "examples": {
              "application/json": [
                {
                  "route_id": "21786",
                  "service_id": "3",
                  "trip_id": "4427556",
                  "trip_headsign": "11 - Dwntwn via Mall of Amer.",
                  "trip_short_name": "",
                  "direction_id": 0,
                  "block_id": "1348670",
                  "shape_id": "166182",
                  "wheelchair_accessible": 0,
                  "bikes_allowed": 0,
                  "agency_key": "mdc-gtfs",
                  "created_at": "2020-01-27T00:20:31.852Z"
                }
              ]
            }
          }
        }
      }
    },
    "/api/routes": {
      "get": {
        "operationId": "listRoutes",
        "summary": "List All Routes",
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "An array with all the available routes for Miami Dade County",
            "examples": {
              "application/json": [
                {
                  "route_id": "21786",
                  "service_id": "3",
                  "trip_id": "4427556",
                  "trip_headsign": "11 - Dwntwn via Mall of Amer.",
                  "trip_short_name": "",
                  "direction_id": 0,
                  "block_id": "1348670",
                  "shape_id": "166182",
                  "wheelchair_accessible": 0,
                  "bikes_allowed": 0,
                  "agency_key": "mdc-gtfs",
                  "created_at": "2020-01-27T00:20:31.852Z"
                }
              ]
            }
          }
        }
      }
    },
    "/api/shapes": {
      "get": {
        "operationId": "listShapes",
        "summary": "List All Shapes",
        "parameters": [
          {
            "in": "query",
            "name": "page",
            "type": "integer",
            "required": true,
            "description": "The page you are trying to query, each page gives back 100 trips by default"
          },
          {
            "in": "query",
            "name": "resultsPerPage",
            "type": "integer",
            "required": false,
            "description": "The number of results you would like per page"
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "An array of all the shapes for Miami Dade County",
            "examples": {
              "application/json": [
                {
                  "shape_id": "166159",
                  "shape_pt_lat": 25.773344,
                  "shape_pt_lon": -80.191864,
                  "shape_pt_sequence": 213,
                  "shape_dist_traveled": 12.3579,
                  "agency_key": "mdc-gtfs",
                  "created_at": "2020-01-27T00:20:31.852Z",
                  "loc": [
                    -80.191864,
                    25.773344
                  ]
                }
              ]
            }
          }
        }
      }
    },
    "/api/shapes/{id}": {
      "get": {
        "operationId": "getShapeById",
        "summary": "Gets a Shape by Id",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "type": "string",
            "required": true,
            "description": "The Id of the shape being requested"
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "The shape object that corresponds to the Id that was passed in",
            "examples": {
              "application/json": [
                {
                  "shape_id": "166159",
                  "shape_pt_lat": 25.773344,
                  "shape_pt_lon": -80.191864,
                  "shape_pt_sequence": 213,
                  "shape_dist_traveled": 12.3579,
                  "agency_key": "mdc-gtfs",
                  "created_at": "2020-01-27T00:20:31.852Z",
                  "loc": [
                    -80.191864,
                    25.773344
                  ]
                }
              ]
            }
          },
          "400": {
            "description": "Most likely missing the Id being passed into the path",
            "examples": {
              "application/json": {
                "error": "{id} is required in the path"
              }
            }
          }
        }
      }
    }
  },
  "consumes": ["application/json"]
}
